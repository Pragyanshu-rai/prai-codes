#include<stdio.h>

int main()
{
    // start of declaration segment
    // Declaration segment containing declaration of variables
    // integer variables declaration
    int XI, XII, x=2, y=3, fn=1, sn=2, tn=3, rn=4;
    // int is an integer data type
    
    // character variables declaration
    char Sleepy, Doc, Dopey;
    // char is a character data type

    // real variables or floation type variables declaration
    float Y, Z;
    // float is real data type

    // end of declaration segment

    // start of initialization segment
    
    // initialization of integer type variables
    XI=0;
    XII=0;

    // initialization of character type variables
    Sleepy='z';
    Doc='z';
    Dopey='z';

    // initialization of real type variables
    Y=0;
    Z=0;

    // end of initialization segment
    printf("the value is %n\d", x);
    fn - sn = tn -rn;
    /* This program determines the product of two numbers */
    printf("\n\n %s %d \n\n ", "the sum of the numbers is",-x + - y);

    // returns and integer 0 because the return type of main function is int 
    return 0;
}
